@model IEnumerable<HRMSPOC.WEB.ViewModel.UserViewModel>

@{
    ViewData["Title"] = "User Dashboard";
}

<h1>User Dashboard</h1>

<!-- Show "Create New User" button only for Admins and HRs -->
@if (ViewBag.UserRoles == "Admin" || ViewBag.UserRoles == "HR" || ViewBag.UserRoles == "SuperAdmin")
{
    <div class="mb-3">
        <a asp-controller="Dashboard" asp-action="Create" class="btn btn-primary">Create New User</a>
    </div>
}


@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Address</td>
                    <td>@user.RoleName</td>
                    <td>
                        <!-- Actions based on user role -->
                        @if (ViewBag.UserRoles == "Admin" || ViewBag.UserRoles == "SuperAdmin")
                        {
                            <a asp-controller="Dashboard" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                            <a asp-controller="Dashboard" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                        }
                        else if (ViewBag.UserRoles == "HR" && @user.CreatedById == ViewBag.UserId)
                        {
                            <a asp-controller="Dashboard" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                            <a asp-controller="Dashboard" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                        }

                        <!-- Employees cannot see edit or delete buttons -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No users found for the selected organization.
    </div>
}
