@model HRMSPOC.WEB.Models.Organization

@{
    ViewBag.Title = "Create Organization";
}

<h2>Create Organization</h2>

<form asp-controller="Organization" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Employees"></label>
        <input asp-for="Employees" class="form-control" placeholder="Enter employee names separated by commas" />
        <span asp-validation-for="Employees" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
