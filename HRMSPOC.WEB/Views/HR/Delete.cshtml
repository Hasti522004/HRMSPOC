@model HRMSPOC.WEB.Models.Employee

@{
    ViewBag.Title = "Delete HR";
}

<h2>Delete HR</h2>

<h4>Are you sure you want to delete this HR?</h4>
<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <p>
        <strong>Email:</strong> @Model.Email<br />
        <strong>Address:</strong> @Model.Address<br />
        <strong>Phone Number:</strong> @Model.PhoneNumber
    </p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="OrganizationId" value="@Model.OrganizationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", new { organizationId = Model.OrganizationId })" class="btn btn-secondary">Cancel</a>
</form>
