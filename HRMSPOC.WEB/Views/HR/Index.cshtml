@model IEnumerable<HRMSPOC.WEB.Models.ApplicationUserViewModel>

<h2>HRs</h2>

<a asp-action="Create" class="btn btn-primary">Create New HR</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var hr in Model)
            {
                <tr>
                    <td>@hr.Id</td>
                    <td>@hr.FirstName</td>
                    <td>@hr.LastName</td>
                    <td>@hr.Email</td>
                    <td>@hr.PhoneNumber</td>
                   
                    <td>
                        <a asp-action="Edit" asp-route-id="@hr.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@hr.Id" class="btn btn-danger">Delete</a>
                        <a asp-action="SetHRId" asp-controller="Employee" asp-route-hrId="@hr.Id" class="btn btn-info">Manage Employees</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No HRs found.</td>
            </tr>
        }
    </tbody>
</table>
