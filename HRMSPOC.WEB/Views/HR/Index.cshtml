@model List<HRMSPOC.WEB.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index for Organization @ViewBag.OrganizationId</h2>

<a href="@Url.Action("Create", new { organizationId = ViewBag.OrganizationId })" class="btn btn-primary">Add New HR</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.Address</td>
                <td>@employee.PhoneNumber</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = employee.Id })" class="btn btn-secondary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = employee.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
